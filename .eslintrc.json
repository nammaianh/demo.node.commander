{
  "env": {
    "es6" : true,
    "node": true
  },
  "extends"      : "eslint:recommended",
  "parserOptions": {
    "sourceType" : "module",
    "ecmaVersion": 8
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "key-spacing": [
      1,
      {
        "align": "colon",
        "mode" : "strict"
      }
    ],
    "space-before-function-paren": "error",
    "no-console": "off"
  }
}
